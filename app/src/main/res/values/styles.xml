<resources>

    <!-- Base application theme. -->
    <style name="AndroidTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent2</item>
    </style>

    <style name="AndroidTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AndroidTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AndroidTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#3F51B5</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

</resources>
